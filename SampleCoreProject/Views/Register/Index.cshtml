@model EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Register Now</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                    @using (Html.BeginForm("Index", "Register", FormMethod.Post)) {
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">First & Last Name</label>
                            @Html.TextBoxFor(x => x.WriterName)
                            @Html.ValidationMessageFor(x => x.WriterName) 
                            @*<input type="text" class="form-control" id="validationDefault01" placeholder="" required="" name="WriterName">*@
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">E Mail</label>
                            @Html.TextBoxFor(x => x.WriterMail)
                            @Html.ValidationMessageFor(x => x.WriterMail)
                            @*<input type="email" class="form-control" id="validationDefault02" placeholder="" required="" name="WriterMail">*@
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Password</label>
                            @Html.TextBoxFor(x => x.WriterPassword)
                            @Html.ValidationMessageFor(x => x.WriterPassword)
                            @*<input type="password" class="form-control" id="password1" placeholder="" required="" name="WriterPassword">*@
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Writer Image</label>
                            @Html.TextBoxFor(x => x.WriterImage)
                            @Html.ValidationMessageFor(x => x.WriterImage)
                            @*<input type="text" class="form-control" id="password2" placeholder="" required="" name="WriterImage">*@
                        </div>

                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Register</button>
                    <p>
                        <a href="#" id="alert">By clicking Signup, I agree to your terms</a>
                    </p>
                    }

            </div>
        </div>
    </div>
</section>

<script>
    $('#alert').click(function(){
        swal("Here's the title!", "...and here's the text!");
    });
</script>
